.calendar {
    width: 100%;
    text-align: center;
    font-size: 15px;
    box-sizing: border-box;
}

.calendar-title {
    line-height: 30px;
    font-size: 15px;
    text-align: left;
    padding: 5px 10px;
    box-sizing: border-box;
}

.calendar-title .ctrl {
    display: inline-block;
    padding: 0 10px;
    background: #f5f5f5;
    border-radius: 5px;
}

.calendar-title .item {
    display: inline-block;
    /* vertical-align: middle; */
    line-height: 25px;
}

.calendar-title .title {
    min-width: 150px;
    text-align: center;
}

.calendar-title .today {
    float: right;
    margin-top: 3px;
}

.calendar-week {
    display: flex;
    text-align: center;
    padding: 12px 5px;
    box-sizing: border-box;
    border-top: 1px solid #f0f0f0;
    border-bottom: 1px solid #f0f0f0;
    background: #fff;
}

.calendar-week .item {
    flex: 1;
}

.calendar-container {
    display: flex;
    flex-wrap: wrap;
    padding: 10px 5px;
    box-sizing: border-box;
}

.calendar-container .grid {
    display: inline-block;
    width: 14.28571428571429%;
    line-height: 30px;
    position: relative;
    z-index: 1;
}

.calendar-container .grid .self {
    position: absolute;
    top: 0px;
    right: 0px;
    width: 7px;
    height: 7px;
    border-radius: 50%;
    background: rgb(49, 120, 228);
    border: 1px solid #fff;
}

.calendar-container .grid.gray {
    color: #ccc;
}

.calendar-container .grid .wrap.select {
    background: rgb(49, 120, 228);
    border-radius: 5px;
    color: #fff;
    width: 80%;
    margin: 0 auto;
}