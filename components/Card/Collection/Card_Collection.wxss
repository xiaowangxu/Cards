/* components/Card_Text.wxss */
.Card-Container {
    width: 100%;
    height: auto;
    min-height: 100px;
    padding: 10px 10px;
    border-radius: 8px;
    box-sizing: border-box;
    position: relative;
}

.Binder-Container {
    width: 100%;
    padding: 10px 10px;
    border-radius: 8px;
    box-sizing: border-box;
    position: absolute;
    top: 16px;
    left: 0px;
    bottom: 0px;
    background-color: rgb(255, 199, 86);
    box-shadow: 0px -4px 10px 0px rgba(0, 0, 0, 0.2);
}

.Binder1 {
    height: 40px;
    position: absolute;
    top: 8px;
    left: 8px;
    right: 8px;
    box-shadow: 0px -4px 10px 0px rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    box-sizing: border-box;
    background-color: rgb(255, 199, 86);
}

.Binder2 {
    height: 40px;
    position: absolute;
    top: 0px;
    left: 16px;
    right: 16px;
    box-shadow: 0px -4px 10px 0px rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    box-sizing: border-box;
    background-color: rgb(255, 199, 86);
}