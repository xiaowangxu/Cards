/* components/Card_Text.wxss */
.Card-Container {
    width: 100%;
    min-height: 80px;
    padding: 13px 20px 13px 12px;
    background-color: rgb(80, 80, 80);
    border-radius: 8px;
    box-sizing: border-box;
    box-shadow: 0px -4px 10px 0px rgba(0, 0, 0, 0.2);
}

.Viewbox {
    width: 100%;
    /* max-height: 600px; */
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.List-Container {
    /* width: 100%; */
    justify-self: stretch;
    min-height: 30px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    margin: 4px 0px 4px 10px;
    box-sizing: border-box;
    position: relative;
}

.Line-Edit {
    width: unset;
    height: unset;
    display: block;
    position: unset;
    color: white;
    margin-left: 18px;
    flex: 1;
}

.Buttom-Finish {
    width: 18px;
    height: 18px;
    /* background-color: white; */
    border: solid 2px white;
    border-radius: 50%;
}

.Buttom-Finish.blank {
    width: 18px;
    height: 18px;
    background-color: transparent;
    border-radius: 50%;
    border: solid 2px transparent;
}

.Buttom-Finish.selected > .Button-Finish-Icon {
    position: relative;
    top: 3px;
    left: 3px;
    background-color: white;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    /* transition: top 0.1s, left 0.1s, width 0.1s, height 0.1s; */
}


.Buttom-Finish > .Button-Finish-Icon {
    top: 9px;
    left: 9px;
    width: 0px;
    height: 0px;
    /* transition: top 0.1s, left 0.1s, width 0.1s, height 0.1s; */
}

.Line-Stroke-Container {
    position: absolute;
    top: 0px;
    bottom: 0px;
    left: 0px;
    right: 0px;
    pointer-events: none;
    box-sizing: border-box;
    padding-left: 32px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.Line-Stroke {
    width: 100%;
    height: 1px;
    background-color: white;
    pointer-events: none;
    box-sizing: border-box;
}