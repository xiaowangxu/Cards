/* components/Card_Text.wxss */
.Card-Container {
    width: 100%;
    min-height: 80px;
    padding: 10px 10px;
    background-color: rgb(255, 118, 118);
    border-radius: 8px;
    box-sizing: border-box;
    box-shadow: 0px -4px 10px 0px rgba(0, 0, 0, 0.2);
}

.Viewbox {
    width: 100%;
    max-height: 600px;
    overflow-y: auto;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.Image-Container {
    width: 80px;
    height: 80px;
    border-radius: 6px;
    background-color: rgba(255, 255, 255, 0.3);
    margin: 6px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.Image {
    width: 80px;
    height: 80px;
    border-radius: 6px;
}