/* components/Card_Text.wxss */
.Card-Container {
    width: 100%;
    min-height: 80px;
    padding: 13px 20px 13px 20px;
    background-color: rgb(23, 53, 159);
    border-radius: 8px;
    box-sizing: border-box;
    box-shadow: 0px -4px 10px 0px rgba(0, 0, 0, 0.2);
}

.Viewbox {
    width: 100%;
    /* max-height: 600px; */
    /* overflow-y: auto; */
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.List-Container {
    /* width: 100%; */
    justify-self: stretch;
    min-height: 30px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    margin: 2px 0px 2px 0px;
    box-sizing: border-box;
    position: relative;
}

.Line-Edit {
    display: block;
    position: unset;
    color: white;
    /* margin-left: 18px; */
    flex: 1;
}

.Buttom-Finish {
    width: 18px;
    height: 18px;
    /* background-color: white; */
    border: solid 2px white;
    border-radius: 50%;
}

.Radio-Container {
    width: 26px;
    height: 26px;
    /* border: solid 1px white; */
    border-radius: 4px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    /* font-size: 14px; */
    line-height: 2.5;
    margin-right: 8px;
    background-color: transparent;
    color: white;
    font-weight: normal;
}

.Radio-Container.selected {
    background-color: white;
    color: rgb(23, 53, 159);
    font-weight: bold;
}