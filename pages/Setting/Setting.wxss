/* pages/Setting/Setting.wxss */

.Container {
    box-sizing: border-box;
    padding: 0px 12px 12px 12px;
    height: auto;
    display: flex;
    flex-direction: column;
}

.SubTitle {
    margin-top: 12px;
    box-sizing: border-box;
}

.List-Container {
    width: 100%;
    /* padding: 4px 12px; */
    /* height: 1000px; */
    margin-top: 12px;
    background-color: rgb(255, 255, 255);
    border-radius: 8px;
    box-sizing: border-box;
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.2);
    display: flex;
    flex-direction: column;
}

.Item-Container {
    padding: 10px 16px;
    border-bottom: solid rgb(240, 240, 240) 1px;
    background-color: white;
    transition: background-color 0.1s ease-out;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.Item-Container:active {
    background-color: rgb(240, 240, 240);
    transition: background-color 0.1s ease-out;
}

.List-Container>.Item-Container:first-child {
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
}

.List-Container>.Item-Container:last-child {
    border-bottom: none;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
}

.Card-Icon {
    width: 12px;
    height: 12px;
    margin-left: 4px;
    margin-right: 16px;
    border-radius: 50%;
}