/* pages/Table.wxss */
page {
    /* box-sizing: border-box; */
    /* padding: 20rpx 20rpx 0rpx 20rpx; */
    position: absolute;
    background-color: white;
}

.Container {
    box-sizing: border-box;
    padding-bottom: 12px;
    /* transition: padding-bottom 0.2s linear; */
}

.StatusBar {
    width: 100%;
    position: sticky;
    top: 0px;
    /* padding: 0px 12px; */
    box-sizing: border-box;
    z-index: 1;
}

.NavBar {
    /* justify-self: stretch; */
    padding: 0px 12px;
    width: 100%;
    position: absolute;
    /* bottom: 0px; */
    display: flex;
    flex-direction: row;
    align-items: center;
    box-sizing: border-box;
}

.NavBar.center {
    justify-content: space-evenly;
}

.NavBar.left {
    justify-content: flex-start;
}

.NavBar.right {
    justify-content: flex-end;
}

.NavButton:active {
    opacity: 60%;
    transition: opacity 0.1s ease-out;
}

.NavButton {
    padding: 0px 12px;
    min-width: 30px;
    background-color: black;
    /* margin-right: 6px; */
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    text-align: center;
    opacity: 100%;
    transition: opacity 0.1s ease-out;
}

.NavButton.center {
    margin-left: 6px;
    margin-right: 6px;
}

.NavButton.left {
    margin-right: 12px;
}

.NavButton.right {
    margin-left: 12px;
}

.NavButton.expand {
    justify-self: stretch;
    width: 100%;
}

.BG-Green {
    background-color: rgb(79, 197, 79);
    color: white;
}

.BG-Red {
    background-color: tomato;
    color: white;
}

.BG-Gray {
    background-color: rgb(230, 230, 230);
    color: black;
}

.Card-MoveArea {
    width: 100%;
    max-width: 100%;
    background-color: transparent;
    box-sizing: border-box;
    /* margin-top: 8px; */
    padding: 12px 12px 0px 12px;
    overflow-x: hidden;
    /* box-shadow: 0px 0px 4px 4px rgba(0, 0, 0, 0.1); */
    position: sticky;
    /* min-height: 92px; */
}

.Card {
    width: 100%;
    max-width: 100%;
    height: 100%;
    box-sizing: border-box;
    border-radius: 12px;
    position: relative;
    left: 0px;
    transition: left 0.2s ease-out;
}

.Card.selected {
    left: 88px;
    transition: left 0.2s ease-out;
}

.Card-Button {
    position: absolute;
    padding-top: 20px;
    top: 0;
    left: 0;
    width: 100px;
    height: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    /* background-color: rgba(0, 0, 0, 0.1); */
}

.Button {
    width: 50px;
    height: 50px;
    background-color: tomato;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-shadow: 0px -4px 10px 0px rgba(0, 0, 0, 0.2);
    /* box-shadow: 0px 4px 10px 4px rgba(0, 0, 0, 0.1); */
    transform: translateY(-2px);
    transition: box-shadow 0.1s ease-out, transform 0.1s ease-out;
}

.Button:active {
    /* box-shadow: 0px 2px 8px 2px rgba(0, 0, 0, 0.2); */
    transform: translateY(0px);
    transition: box-shadow 0.1s ease-out, transform 0.1s ease-out;
}

.Card-Shop {
    z-index: 3;
    box-sizing: border-box;
    border-radius: 20px 20px 0px 0px;
    width: 100%;
    height: 400px;
    position: fixed;
    bottom: -500px;
    left: 0px;
    background-color: white;
    box-shadow: 0px -16px 20px 0px rgba(0, 0, 0, 0.4);
    transition: bottom 0.2s linear;
    pointer-events: all;
    padding: 24px 0px;
    display: flex;
    flex-direction: column;
}

.Card-Shop.show {
    bottom: 0px;
    transition: bottom 0.2s linear;
}

.Cover {
    z-index: 2;
    position: fixed;
    top: 0px;
    bottom: 0px;
    left: 0px;
    right: 0px;
    background-color: rgba(0, 0, 0, 0);
    pointer-events: none;
    /* backdrop-filter: blur(0px); */
    transition: background-color 0.2s linear;
}

.Cover.show {
    background-color: rgba(0, 0, 0, 0.3);
    pointer-events: all;
    /* backdrop-filter: blur(20px); */
    transition: background-color 0.2s linear;
}

.Card_Container {
    flex: 1;
    width: 100%;
    /* margin-top: 12px; */
    /* padding: 10px 0px; */
    box-sizing: border-box;
}

.NavButton-Container {
    display: flex;
    flex-direction: row;
    align-items: center;
    row-gap: 12px;
}

.NavButton-Container.center {
    justify-content: space-evenly;
}

.NavButton-Container.left {
    justify-content: flex-start;
}

.NavButton-Container.right {
    justify-content: flex-end;
}

.Card_Swiper {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.Card_Item {
    border-radius: 20px;
    box-sizing: border-box;
    /* background-color: blue; */
    position: absolute;
    top: 0px;
    left: 0px;
    bottom: 0px;
    right: 0px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    overflow-y: auto;
    margin: 16px 0px 36px 0px;
    padding: 0px 30px;
}