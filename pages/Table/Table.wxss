/* pages/Table.wxss */
page {
    /* box-sizing: border-box; */
    /* padding: 20rpx 20rpx 0rpx 20rpx; */
    position: absolute;
    background-color: white;
}

.Title {
    width: 100%;
    box-sizing: border-box;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    word-break: break-all;
}

.Container {
    box-sizing: border-box;
    padding-bottom: 12px;
    /* transition: padding-bottom 0.2s linear; */
}

.Card-MoveArea {
    width: 100%;
    max-width: 100%;
    background-color: transparent;
    box-sizing: border-box;
    /* margin-top: 8px; */
    padding: 12px 12px 0px 12px;
    overflow-x: hidden;
    /* box-shadow: 0px 0px 4px 4px rgba(0, 0, 0, 0.1); */
    position: sticky;
    /* min-height: 92px; */
}

.Card {
    width: 100%;
    max-width: 100%;
    height: 100%;
    box-sizing: border-box;
    border-radius: 12px;
    position: relative;
    left: 0px;
    transition: left 0.2s ease-out;
}

.Card.selected {
    left: 88px;
    transition: left 0.2s ease-out;
}

.Card-Button {
    position: absolute;
    padding-top: 20px;
    top: 0;
    left: 0;
    width: 100px;
    height: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    /* background-color: rgba(0, 0, 0, 0.1); */
}

.Button {
    width: 50px;
    height: 50px;
    background-color: tomato;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-shadow: 0px -4px 10px 0px rgba(0, 0, 0, 0.2);
    /* box-shadow: 0px 4px 10px 4px rgba(0, 0, 0, 0.1); */
    transform: translateY(-2px);
    transition: box-shadow 0.1s ease-out, transform 0.1s ease-out;
}

.Button:active {
    /* box-shadow: 0px 2px 8px 2px rgba(0, 0, 0, 0.2); */
    transform: translateY(0px);
    transition: box-shadow 0.1s ease-out, transform 0.1s ease-out;
}

.Card-Shop {
    z-index: 102;
    box-sizing: border-box;
    border-radius: 20px 20px 0px 0px;
    width: 100%;
    height: 400px;
    position: fixed;
    bottom: -500px;
    left: 0px;
    background-color: white;
    box-shadow: 0px -16px 20px 0px rgba(0, 0, 0, 0.4);
    transition: bottom 0.2s linear;
    pointer-events: all;
    padding: 24px 0px;
    display: flex;
    flex-direction: column;
}

.Card-Shop.show {
    bottom: 0px;
    transition: bottom 0.2s linear;
}

.Cover {
    z-index: 101;
    position: fixed;
    top: 0px;
    bottom: 0px;
    left: 0px;
    right: 0px;
    background-color: rgba(0, 0, 0, 0);
    pointer-events: none;
    /* backdrop-filter: blur(0px); */
    transition: background-color 0.2s linear;
}

.Cover.show {
    background-color: rgba(0, 0, 0, 0.3);
    pointer-events: all;
    /* backdrop-filter: blur(20px); */
    transition: background-color 0.2s linear;
}

.Card_Container {
    flex: 1;
    width: 100%;
    /* margin-top: 12px; */
    /* padding: 10px 0px; */
    box-sizing: border-box;
}

.Card_Swiper {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.Card_Item {
    border-radius: 20px;
    box-sizing: border-box;
    /* background-color: blue; */
    position: absolute;
    top: 0px;
    left: 0px;
    bottom: 0px;
    right: 0px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    overflow-y: auto;
    margin: 16px 0px 36px 0px;
    padding: 0px 30px;
}