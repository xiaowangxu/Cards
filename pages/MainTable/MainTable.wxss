.Container {
    box-sizing: border-box;
    padding-bottom: 12px;
    padding-left: 12px;
    padding-right: 12px;
    /* transition: padding-bottom 0.2s linear; */
}

.CourseTable {
    width: 100%;
    height: 100%;
    /* background-color: red; */
    /* margin-bottom: 12px; */
    padding: 12px;
    box-sizing: border-box;
}

.List-Container-Main {
    width: 100%;
    /* padding: 4px 12px; */
    /* height: 1000px; */
    /* margin-top: 12px; */
    margin-bottom: 12px;
    background-color: rgb(255, 255, 255);
    border-radius: 8px;
    box-sizing: border-box;
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.2);
    display: flex;
    flex-direction: column;
}

.Item-Container-Main {
    padding: 10px 16px;
    border-bottom: solid rgb(240, 240, 240) 1px;
    background-color: white;
    transition: background-color 0.1s ease-out;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.Item-Container-Main:active {
    background-color: rgb(240, 240, 240);
    transition: background-color 0.1s ease-out;
}

.List-Container-Main>.Item-Container-Main:first-child {
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
}

.List-Container-Main>.Item-Container-Main:last-child {
    border-bottom: none;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
}