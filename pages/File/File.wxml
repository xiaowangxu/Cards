<view class="Container" id="page">

	<view wx:for="{{cards}}" class="Card-MoveArea" wx:key="uid">
		<text wx:if="{{item.card.type === 'text'}}" class="TEXT-Medium" style="font-weight: bold;">{{item.card.text}}</text>
		<view wx:else class="Card">
			<template is="{{item.card.type}}" data="{{index: index, data: item.card.data, full: false}}"></template>
		</view>
	</view>
