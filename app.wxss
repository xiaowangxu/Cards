/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.TEXT-Large {
  font-size: 24px;
  font-weight: bold;
}

.TEXT-Medium{
  font-size: 18px;
  /* font-weight: bold; */
}

.TEXT-Normal{
  font-size: 14px;
  /* font-weight: bold; */
}

.TEXT-Small{
  font-size: 12px;
  /* font-weight: bold; */
}

.TEXT-Bold{
  /* font-size: 12px; */
  font-weight: bold;
}



.StatusBar {
  width: 100%;
  position: sticky;
  top: 0px;
  /* padding: 0px 12px; */
  box-sizing: border-box;
  background-color: rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(20px);
  z-index: 100;
}

.NavBar {
  /* justify-self: stretch; */
  padding: 0px 12px;
  width: 100%;
  position: absolute;
  /* bottom: 0px; */
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
}

.NavBar.center {
  justify-content: space-evenly;
}

.NavBar.left {
  justify-content: flex-start;
}

.NavBar.right {
  justify-content: flex-end;
}

.NavButton:active {
  opacity: 60%;
  transition: opacity 0.1s ease-out;
}

.NavButton {
  padding: 0px 12px;
  min-width: 30px;
  background-color: black;
  /* margin-right: 6px; */
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  text-align: center;
  opacity: 100%;
  transition: opacity 0.1s ease-out;
}

.NavButton.center {
  margin-left: 6px;
  margin-right: 6px;
}

.NavButton.left {
  margin-right: 12px;
}

.NavButton.right {
  margin-left: 12px;
}

.NavButton.expand {
  justify-self: stretch;
  width: 100%;
}

.BG-Green {
  background-color: rgb(79, 197, 79);
  color: white;
}

.BG-Red {
  background-color: tomato;
  color: white;
}

.BG-Gray {
  background-color: rgb(230, 230, 230);
  color: black;
}

.NavButton-Container {
  display: flex;
  flex-direction: row;
  align-items: center;
  row-gap: 12px;
}

.NavButton-Container.center {
  justify-content: space-evenly;
}

.NavButton-Container.left {
  justify-content: flex-start;
}

.NavButton-Container.right {
  justify-content: flex-end;
}